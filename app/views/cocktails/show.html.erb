<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h2>Recipe</h2>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <div class="col-sm-12 col-md-6">
    <!-- _new.html.rb - added underscore to work - required whenever rendering a partial -->
    <!-- rendering page within the page -->
    <%= render 'doses/new', cocktail: @cocktail, dose: @dose %>
    <br>
    <p><%= link_to "Go back", cocktails_path, class: "btn btn-primary" %></p>
  </div>

</div>

